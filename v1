import random

def magic_8_ball():
    responses = [
        "Yes",
        "No",
        "Maybe",
        "Ask again later",
        "Definitely not",
        "It is certain",
        "Most likely",
        "Don't count on it",
        "Yes, but be cautious",
        "No way",
        "Certainly",
        "I'm not sure",
        "Absolutely",
        "Probably not",
        "Yes, definitely",
        "My sources say no",
        "Itâ€™s possible",
        "Very likely",
        "Unlikely",
        "Definitely"
    ]

    # Ask the user for a question
    input("Ask the Magic 8-Ball a yes-or-no question: ")

    # Generate a random response
    answer = random.choice(responses)

    # Print the answer
    print("Magic 8-Ball says:", answer)

# Run the Magic 8-Ball program
if __name__ == "__main__":
    magic_8_ball()
